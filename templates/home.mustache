<div data-role="page" id="address-form-page">

  {{> page_header}}

  <div data-role="content" class="content">

  <h3>Enter Addresses:</h3>


      <form id="manual-address-form" data-ajax="false">
        <div data-role="fieldcontain">
          <label for="manual-from-address">From:</label>
          <input name="manual-from-address" type="text"/>
        </div>

        <div data-role="fieldcontain">
          <label for="manual-to-address">To:</label>
